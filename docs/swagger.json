{
    "openapi": "3.0.0",
    "info": {
        "title": "World City API",
        "description": "This is a simple Express API server based on QLD crime statistics",
        "version": "1.0.0",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "email": "test@test.io"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000"
        }
    ],
    "basePath": "/api",
    "tags": [
        {
            "name": "information",
            "description": "General API description"
        },
        {
            "name": "query",
            "description": "API queries based on city and optional country code."
        }
    ],
    "paths": {
        "/": {
            "get": {
                "tags": [
                    "information"
                ],
                "summary": "Simple information page",
                "description": "Very basic API home page promising more information",
                "operationId": "apiHome",
                "produces": [
                    "text/html"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation"
                    }
                }
            }
        },
        "/api/areas": {
            "get": {
                "tags": [
                    "query"
                ],
                "summary": "List LGAs",
                "description": "Full listing of LGAs with its latitude and longitude",
                "operationId": "listLGA",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "Error": {
                                    "type": "string",
                                    "enum": [
                                        "true",
                                        "false"
                                    ]
                                },
                                "Message": {
                                    "type": "string",
                                    "enum": [
                                        "Success",
                                        "Failure"
                                    ]
                                },
                                "Local Government Areas": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "district": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/offences": {
            "get": {
                "tags": [
                    "query"
                ],
                "summary": "List of offences that can be queried from",
                "description": "Specific crimes that can be used to derive specific statistics on that crime.",
                "operationId": "listOffence",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "offences": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "name": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}